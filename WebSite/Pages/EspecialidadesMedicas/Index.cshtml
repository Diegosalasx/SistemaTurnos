@page
@model WebSite.Pages.EspecialidadesMedicas.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Especialidades Médicas</h1>
<p>Desde aquí puede gestionar las espacialidades médicas.</p>
<hr />
<div class="row">
    <div class="col-12 text-end">
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus me-2"></i>Nueva especialidad
        </a>
    </div>
</div>
<p>
    
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
               Nombre
            </th>
            <th>
               Descripción
            </th>
            <th>
               Activo
            </th>
            <th>
                Creación
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.EspecialidadesMedica) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creacion)
            </td>
            <td class="text-end">
                <div class="btn-group">
                        <a asp-page="./Edit" asp-route-id="@item.EspecialidadMedicaId" class="btn btn-sm btn-secondary"><i class="bi bi-pencil me-2 text-dark"></i>Editar</a>
                        <a asp-page="./Details" asp-route-id="@item.EspecialidadMedicaId" class="btn btn-sm btn-secondary"><i class="bi bi-pencil me-2 text-eye"></i>Detalle</a>
                        <a asp-page="./Delete" asp-route-id="@item.EspecialidadMedicaId" class="btn btn-sm btn-secondary"><i class="bi bi-trash me-2 text-dark"></i>Borrar</a>
                        <a asp-page="./Horarios" asp-route-id="@item.EspecialidadMedicaId" class="btn btn-sm btn-secondary"><i class="bi bi-clock me-2 text-dark"></i>Horarios</a>
                </div>  
            </td>
        </tr>
    }
    </tbody>
</table>
